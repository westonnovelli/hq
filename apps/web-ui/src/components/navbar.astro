---
import type { routes } from '../routes.ts';
import NavLink from './navlink.astro';
import TitleIcon from './TitleIcon.astro';
import ArchitectureIcon from './ArchitectureIcon.astro';

interface Props {
    location: routes;
}

const { location } = Astro.props;
---

<div class="flex flex-col items-center w-16 h-full overflow-hidden text-neutral-100 bg-color1">
    <div class="flex items-center justify-center mt-3">
        <svg class="w-8 h-8 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 17a1 1 0 001.447.894l4-2A1 1 0 0017 15V9.236a1 1 0 00-1.447-.894l-4 2a1 1 0 00-.553.894V17zM15.211 6.276a1 1 0 000-1.788l-4.764-2.382a1 1 0 00-.894 0L4.789 4.488a1 1 0 000 1.788l4.764 2.382a1 1 0 00.894 0l4.764-2.382zM4.447 8.342A1 1 0 003 9.236V15a1 1 0 00.553.894l4 2A1 1 0 009 17v-5.764a1 1 0 00-.553-.894l-4-2z" />
        </svg>
    </div>
    <div class="flex flex-col items-center mt-3 border-t border-color2">
        <NavLink to="/" active={location === 'Home'}>
            <svg class="w-6 h-6 stroke-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
        </NavLink>
        <NavLink to="/profile" active={location === 'Profile'}>
            <TitleIcon/>
        </NavLink>
        <NavLink to="/showcase" active={location === 'Showcase'}>
            <ArchitectureIcon/>
        </NavLink>
    </div>
    <div class="flex flex-col items-center mt-3 border-t border-color2">
      <div class="flex items-center justify-center w-12 h-12 bg-color1 text-neutral-100">1</div>
      <div class="flex items-center justify-center w-12 h-12 bg-color2 text-neutral-100">2</div>
      <div class="flex items-center justify-center w-12 h-12 bg-color3 text-neutral-100">3</div>
      <div class="flex items-center justify-center w-12 h-12 bg-color4 text-neutral-950">4</div>
      <div class="flex items-center justify-center w-12 h-12 bg-color5 text-neutral-950">5</div>
    </div>
    <a class="flex items-center justify-center w-16 h-16 mt-auto bg-gray-800 hover:bg-color2 hover:text-neutral-100" href="#">
        <svg class="w-6 h-6 stroke-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
    </a>
</div>

