---

interface Props {
    to?: string;
    active?: boolean;
}

const { to = '#', active = false, class: className } = Astro.props;
---

<a
  class={`${className} flex items-center justify-center gap-3 w-full md:w-12 h-12 mt-2 rounded ${active ? 'bg-color4' : 'hover:bg-color2 hover:text-neutral-100'}`}
  href={to}
>
  <slot/>
</a>

